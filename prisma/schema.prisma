generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Transaction {
  id           Int      @id @default(autoincrement())
  description  String
  amount       Float
  date         DateTime
  categoryId   Int
  category     Category @relation(fields: [categoryId], references: [id])
  installments Int      @default(1)
  cardType     CardType

  @@index([categoryId])
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  transactions Transaction[]
}

enum CardType {
  DEBIT
  CREDIT
}
